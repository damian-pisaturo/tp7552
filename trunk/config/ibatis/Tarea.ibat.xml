<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE sqlMap PUBLIC "-//IBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap>

	<typeAlias alias="tarea" type="laboratorio.vo.TareaVO" />

	<resultMap id="resultadoTarea" class="tarea">
		<result property="id" column="id"/>
		<result property="descripcion" column="descripcion"/>
	</resultMap>

	<select id="tareasPorTecnico" resultMap="resultadoTarea" parameterClass="java.lang.Integer">
		SELECT t.id as id, t.descripcion as descripcion
		FROM tarea t
		JOIN tecnico_tarea tt ON tt.tarea_id = t.id
		WHERE tt.tecnico_id = #tecnicoId#
		ORDER BY t.descripcion
	</select>
	
</sqlMap>